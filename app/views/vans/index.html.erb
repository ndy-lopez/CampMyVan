<h1 class="text-center"> Find your Van. Live your dream. </h1>
<p class="text-center">Prices are shown on weekly basis.</p>


<% @vans.each do |van| %>

  <div class="card-trip">
    <img src="http://carsot.com/images/volkswagen-california-t6-2015-now-minivan-exterior-2.jpg" />
    <div style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
    <div class="card-trip-infos">
      <div>
        <h2><%= van.model %></h2>
        <p><%= van.brand %></p>
      </div>
      <h2 class="card-trip-pricing">$<%= van.price  / 52 %></h2>
      <%= link_to  "Book now", van_path(van.id), class: "btn btn-flat" %>

      <img src="https://kitt.lewagon.com/placeholder/users/mmessager" class="card-trip-user avatar-bordered" />
    </div>
  </div>

<% end %>
