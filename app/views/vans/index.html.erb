<h1 class="text-center"> Find a van. Live your dream. </h1>
<p class="text-center">Prices are shown on weekly basis.</p>


<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>




<% @vans.each do |van| %>

<div class="card-trip col-6">
  <% if van.photo.key.present? %>
    <div class="card-trip" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path van.photo.key %>')">
  <% else %>
    <div class="card-trip">
  <% end %>

  <div class="card-trip-infos">
    <!-- Rest of your code -->
        <h2><%= van.model %></h2>
        <p><%= van.brand %></p>
        <p><%= van.address %></p>
      </div>
      </div>
      <h2 class="card-trip-pricing">$<%= van.price  / 52 %></h2>
      <%= link_to  "View Van", van_path(van.id), class: "btn btn-flat" %>
  </div>
</div>


      <%# <img src="https://kitt.lewagon.com/placeholder/users/mmessager" class="card-trip-user avatar-bordered" /> %>
    </div>
  </div>

<% end %>
