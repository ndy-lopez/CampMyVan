<div class="card-title">
  <h1>Your Van Bookings </h1>
</div>

<div class="container py-5">
  <div class="row">

      <% @client_reservations.each do |reservation| %>
        <h2><%= reservation.van.user.first_name %>: wants to rent your Van</h2>
        <div class="card-res">
          <%= cl_image_tag reservation.van.photo.key %>
          <div class="card-res-product-infos">
            <h2><%= reservation.van.brand %></h2>

            <p><%= reservation.start_date %> <strong>Until</strong> <%= reservation.end_date %></p>
            <% if reservation.accept == true %>
                <p>Status: Accepted!</p>
              <% elsif reservation.accept == false %>
                <p>Status: Cancelled!</p>
              <% elsif reservation.accept.nil? %>
                <p>Status: Under Review</p>
              <% end %>

          </div>
        </div>
          <%# <%= link_to "#{reservation.start_date} to #{reservation.end_date}", van_reservation_path(van_id: reservation.van_id, id: reservation.id) %>
        <%# <p>You dont have any bookings</p> %>
      <% end %>
  </div>

</div>
