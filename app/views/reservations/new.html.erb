<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Make a reservation for the <%= @van.brand @van.model %></h3>
        <%= simple_form_for [@van, @reservation] do |f| %>
          <%= f.input :start_date, placeholder: 'Enter the start date (YYYY-MM-DD)' %>
          <%= f.input :end_date, placeholder: 'Enter the end date (YYYY-MM-DD)' %>
          <%= f.submit class: "btn btn-flat" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
